# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
    charset = utf-8
    end_of_line = lf
    indent_size = 4
    indent_style = space
    insert_final_newline = true
    max_line_length = 120
    tab_width = 4
    trim_trailing_whitespace = true

[{*.yml, *.yaml}]
    indent_size = 2
    tab_width = 2


[{*.css,*.js,*.py}]
    max_line_length = 80
